@model AttendenceManagementSystem.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0 text-center">
                        <i class="bi bi-person-circle"></i> Login
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4 text-center">
                        Sign in to access your institute dashboard
                    </p>

                    <div class="alert alert-info small" role="alert">
                        <i class="bi bi-info-circle-fill"></i> 
                        <strong>New Admin?</strong> After registration, your Institute Code is shown on the success page and your dashboard.
                    </div>

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="InstituteCode" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-warning text-dark">
                                    <i class="bi bi-building"></i>
                                </span>
                                <input asp-for="InstituteCode" 
                                       class="form-control form-control-lg" 
                                       placeholder="e.g., PUN-4821" 
                                       style="text-transform: uppercase;" />
                            </div>
                            <span asp-validation-for="InstituteCode" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Your unique institute code
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="your.email@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-2">
                            Don't have an account?
                            <a asp-controller="Account" asp-action="SignUp" class="text-decoration-none fw-bold">
                                Register Institute
                            </a>
                        </p>
                        <p class="mb-0">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="text-muted text-decoration-none">
                                Forgot Password?
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
