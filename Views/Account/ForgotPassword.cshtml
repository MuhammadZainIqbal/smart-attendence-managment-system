@model AttendenceManagementSystem.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-info">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="bi bi-shield-lock"></i> Forgot Password
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-light border-info" role="alert">
                        <p class="mb-0 text-muted">
                            <i class="bi bi-info-circle-fill text-info"></i>
                            Enter your registered email address. We'll send you a 6-digit OTP to reset your password.
                        </p>
                    </div>

                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Email Address
                            </label>
                            <input asp-for="Email" 
                                   class="form-control form-control-lg" 
                                   placeholder="admin@example.com" 
                                   autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-info btn-lg text-white">
                                <i class="bi bi-send"></i> Send OTP
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-0">
                            <a asp-action="Login" asp-controller="Account" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Security Notice -->
            <div class="mt-4 p-3 bg-light rounded border">
                <h6 class="fw-bold mb-2">
                    <i class="bi bi-shield-check text-success"></i> Security Notice
                </h6>
                <ul class="small text-muted mb-0">
                    <li>The OTP will be valid for 10 minutes</li>
                    <li>Never share your OTP with anyone</li>
                    <li>If you didn't request this, please ignore this action</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
