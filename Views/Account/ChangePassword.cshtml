@model AttendenceManagementSystem.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0 text-center">
                        <i class="bi bi-shield-lock"></i> Change Password Required
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle-fill"></i>
                        <strong>Security Notice:</strong> You must change your password before accessing your account.
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-controller="Account" asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-bold"></label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Enter your current password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold"></label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Minimum 6 characters" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="bi bi-check-circle"></i> Update Password
                            </button>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <p class="text-center text-muted mb-0">
                        <i class="bi bi-lock-fill"></i> Your security is our priority
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
