@using Microsoft.AspNetCore.Identity
@using AttendenceManagementSystem.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Present!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" id="mobileMenuToggle">
        <i class="bi bi-list"></i>
    </button>

    <!-- Left Sidebar -->
    <aside class="dashboard-sidebar" id="dashboardSidebar">
        <!-- Logo -->
        <div class="sidebar-logo">
            <div class="logo-text">
                <span class="logo-present">Present</span><span class="logo-exclamation">!</span>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="sidebar-nav">
            @{
                var currentUser = await UserManager.GetUserAsync(User);
                var isAdmin = User.IsInRole("Admin");
                var isTeacher = User.IsInRole("Teacher");
                var isStudent = User.IsInRole("Student");
            }

            <!-- ADMIN MENU -->
            @if (isAdmin)
            {
                <!-- Dashboard -->
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <!-- Academic Section -->
                <div class="nav-section-title">Academic</div>
                <a class="nav-link" asp-controller="Batches" asp-action="Index">
                    <i class="bi bi-calendar3"></i> Batches
                </a>
                <a class="nav-link" asp-controller="Sections" asp-action="Index">
                    <i class="bi bi-collection"></i> Sections
                </a>
                <a class="nav-link" asp-controller="Subjects" asp-action="Index">
                    <i class="bi bi-book"></i> Subjects
                </a>

                <!-- Users Section -->
                <div class="nav-section-title">Users</div>
                <a class="nav-link" asp-controller="Teachers" asp-action="Index">
                    <i class="bi bi-person-badge"></i> Teachers
                </a>
                <a class="nav-link" asp-controller="Students" asp-action="Index">
                    <i class="bi bi-people"></i> Students
                </a>

                <!-- Course Management -->
                <div class="nav-section-title">Course Management</div>
                <a class="nav-link" asp-controller="CourseOfferings" asp-action="Index">
                    <i class="bi bi-journal-bookmark"></i> Course Offerings
                </a>
                <a class="nav-link" asp-controller="ClassSchedules" asp-action="Index">
                    <i class="bi bi-clock-history"></i> Class Schedules
                </a>
                <a class="nav-link" asp-controller="Enrollments" asp-action="Index">
                    <i class="bi bi-card-checklist"></i> Enrollments
                </a>

                <!-- System Settings -->
                <div class="nav-section-title">System</div>
                <a class="nav-link" asp-controller="Settings" asp-action="Edit">
                    <i class="bi bi-gear-fill"></i> Settings
                </a>
            }

            <!-- TEACHER MENU -->
            @if (isTeacher)
            {
                <!-- Dashboard -->
                <a class="nav-link" asp-controller="Teacher" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <!-- Teaching Tools -->
                <div class="nav-section-title">Teaching Tools</div>
                <a class="nav-link" asp-controller="Reports" asp-action="Index">
                    <i class="bi bi-bar-chart-fill"></i> Reports & Analytics
                </a>
            }

            <!-- STUDENT MENU -->
            @if (isStudent)
            {
                <!-- Dashboard -->
                <a class="nav-link" asp-controller="Student" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <!-- My Attendance -->
                <div class="nav-section-title">My Attendance</div>
                <a class="nav-link" asp-controller="Student" asp-action="Index">
                    <i class="bi bi-calendar-check"></i> My Subjects
                </a>
            }
        </nav>
    </aside>

    <!-- Top Bar -->
    <header class="dashboard-topbar">
        <div class="topbar-title">
            @ViewData["Title"]
        </div>
        <div class="topbar-user">
            @if (SignInManager.IsSignedIn(User) && currentUser != null)
            {
                <div class="d-flex flex-column align-items-end">
                    <span class="topbar-user-name">@currentUser.FullName</span>
                    <span class="topbar-user-role">
                        @if (isAdmin) { <text>Administrator</text> }
                        @if (isTeacher) { <text>Teacher</text> }
                        @if (isStudent) { <text>Student</text> }
                    </span>
                </div>
            }
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="dashboard-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show fade-in" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show fade-in" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Highlight active menu item
        $(document).ready(function() {
            var path = window.location.pathname;
            $('.sidebar-nav .nav-link').each(function() {
                var href = $(this).attr('href');
                if (path === href || path.startsWith(href + '/')) {
                    $(this).addClass('active');
                }
            });

            // Mobile menu toggle
            $('#mobileMenuToggle').on('click', function() {
                $('#dashboardSidebar').toggleClass('show');
            });

            // Close sidebar when clicking outside on mobile
            $(document).on('click', function(e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('#dashboardSidebar, #mobileMenuToggle').length) {
                        $('#dashboardSidebar').removeClass('show');
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
