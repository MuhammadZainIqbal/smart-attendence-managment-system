@model AttendenceManagementSystem.Models.ClassSchedule

@{
    ViewData["Title"] = "Delete Class Schedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <h2 class="text-danger mb-4">
        <i class="bi bi-exclamation-triangle"></i> Delete Class Schedule
    </h2>

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this class schedule?</h5>
        <p class="mb-0">This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Day:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Model.DayOfWeek.ToString()</span>
                </dd>

                <dt class="col-sm-3">Time:</dt>
                <dd class="col-sm-9">
                    <i class="bi bi-clock"></i> 
                    @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")
                </dd>

                <dt class="col-sm-3">Subject:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.CourseOffering.Subject.Code</strong> - @Model.CourseOffering.Subject.Name
                </dd>

                <dt class="col-sm-3">Batch - Section:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.CourseOffering.Batch.Name</span>
                    <span class="badge bg-secondary">@Model.CourseOffering.Section.Name</span>
                </dd>

                <dt class="col-sm-3">Teacher:</dt>
                <dd class="col-sm-9">
                    <i class="bi bi-person-badge"></i> @Model.CourseOffering.Teacher.FullName
                </dd>

                <dt class="col-sm-3">Grace Period:</dt>
                <dd class="col-sm-9">
                    @Model.GracePeriodMinutes minutes
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
