@{
    ViewData["Title"] = "Create Class Schedule";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <h2 class="mb-4">Create Class Schedule</h2>

    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> 
        Define when this course meets. The Time-Locker will only allow attendance marking during the scheduled time (plus grace period).
    </div>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="courseOfferingId" class="form-label">Course Offering</label>
            <select id="courseOfferingId" name="courseOfferingId" class="form-select" asp-items="ViewBag.CourseOfferings" required>
                <option value="">-- Select Course Offering --</option>
            </select>
            <small class="form-text text-muted">Select the course to schedule</small>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="dayOfWeek" class="form-label">Day of Week</label>
                <select id="dayOfWeek" name="dayOfWeek" class="form-select" asp-items="ViewBag.DaysOfWeek" required>
                    <option value="">-- Select Day --</option>
                </select>
            </div>

            <div class="col-md-4 mb-3">
                <label for="startTime" class="form-label">Start Time</label>
                <input id="startTime" name="startTime" type="time" class="form-control" required />
                <small class="form-text text-muted">When the class begins</small>
            </div>

            <div class="col-md-4 mb-3">
                <label for="endTime" class="form-label">End Time</label>
                <input id="endTime" name="endTime" type="time" class="form-control" required />
                <small class="form-text text-muted">When the class ends</small>
            </div>
        </div>

        <div class="mb-3">
            <label for="gracePeriodMinutes" class="form-label">Grace Period (Minutes)</label>
            <input id="gracePeriodMinutes" name="gracePeriodMinutes" type="number" class="form-control" 
                   value="15" min="0" max="60" required />
            <small class="form-text text-muted">
                Additional time (before/after) when attendance can be marked. Default: 15 minutes.
            </small>
        </div>

        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> 
            <strong>Validation:</strong> End time must be after start time. The system will prevent overlapping schedules for the same course.
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create Schedule
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
