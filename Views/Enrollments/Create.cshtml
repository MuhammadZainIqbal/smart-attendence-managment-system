@{
    ViewData["Title"] = "Create Manual Enrollment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <h2 class="mb-4">Create Manual Enrollment</h2>

    <div class="alert alert-warning mb-4">
        <i class="bi bi-exclamation-triangle"></i> 
        <strong>Repeater/Special Case Enrollment:</strong> Use this form to manually enroll a student in a course 
        outside their main Batch and Section. This is typically used for repeater students or special circumstances.
    </div>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="studentId" class="form-label">Student</label>
            <select id="studentId" name="studentId" class="form-select" asp-items="ViewBag.Students" required>
                <option value="">-- Select Student by Roll Number --</option>
            </select>
            <small class="form-text text-muted">
                <i class="bi bi-search"></i> Students are listed by Roll Number for easy identification. 
                Format: <strong>Roll Number - Full Name (Email)</strong>
            </small>
        </div>

        <div class="mb-3">
            <label for="courseOfferingId" class="form-label">Course Offering</label>
            <select id="courseOfferingId" name="courseOfferingId" class="form-select" asp-items="ViewBag.CourseOfferings" required>
                <option value="">-- Select Course Offering --</option>
            </select>
            <small class="form-text text-muted">The course to enroll the student in</small>
        </div>

        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            <strong>Duplicate Prevention:</strong> You cannot enroll the same student in the same course offering twice.
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create Enrollment
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
