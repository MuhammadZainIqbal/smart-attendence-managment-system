@model IEnumerable<AttendenceManagementSystem.Models.StudentEnrollment>

@{
    ViewData["Title"] = "Student Enrollments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Student Enrollments</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Manual Enrollment
        </a>
    </div>

    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> 
        <strong>Manual Enrollments</strong> are used for special cases like repeater students who need to take courses from different sections. 
        Most enrollments are created automatically when students or course offerings are added.
    </div>

    <!-- Filter Bar -->
    <div class="card mb-4" style="background-color: #f8f9fa; border: 1px solid #dee2e6;">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="bi bi-funnel"></i> Filter Enrollments
            </h5>
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="batchId" class="form-label">Batch</label>
                        <select name="batchId" id="batchId" class="form-select" asp-items="ViewBag.BatchId">
                            <option value="">All Batches</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="sectionId" class="form-label">Section</label>
                        <select name="sectionId" id="sectionId" class="form-select" asp-items="ViewBag.SectionId">
                            <option value="">All Sections</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="bi bi-search"></i> Filter
                        </button>
                        <a asp-action="Index" class="btn btn-secondary flex-fill">
                            <i class="bi bi-x-circle"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Roll Number</th>
                        <th>Student Name</th>
                        <th>Subject</th>
                        <th>Batch - Section</th>
                        <th>Teacher</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong class="text-success">@item.Student.RollNumber</strong>
                            </td>
                            <td>
                                <i class="bi bi-person"></i> 
                                <strong>@item.Student.FullName</strong>
                                <br />
                                <small class="text-muted">@item.Student.Email</small>
                            </td>
                            <td>
                                <strong>@item.CourseOffering.Subject.Code</strong> - @item.CourseOffering.Subject.Name
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.CourseOffering.Batch.Name</span>
                                <span class="badge bg-info text-dark">@item.CourseOffering.Section.Name</span>
                            </td>
                            <td>
                                <i class="bi bi-person-badge"></i> @item.CourseOffering.Teacher.FullName
                            </td>
                            <td class="text-end">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to un-enroll this student?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Un-enroll
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-secondary mt-3">
            <strong>Total Enrollments:</strong> @Model.Count()
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No enrollments found. Enrollments are automatically created when students or course offerings are added.
        </div>
    }
</div>
