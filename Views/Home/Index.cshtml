@{
    ViewData["Title"] = "Present! - Smart Attendance Management";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Attendance, Automated.</h1>
                <p class="lead">
                    The secure, multi-tenant platform for modern institutes. 
                    Manage courses, track students, and generate reports in real-time.
                </p>
                <div class="hero-cta-buttons">
                    <a href="@Url.Action("SignUp", "Account")" class="btn btn-primary btn-lg">
                        <i class="bi bi-building"></i> Create Institute
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Login to Portal
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row g-4">
            <!-- Feature 1: Time-Locked Security -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <h3>Time-Locked Security</h3>
                    <p>
                        Prevent proxy attendance with strict, time-windowed marking sessions. 
                        Teachers can only mark attendance during scheduled class hours.
                    </p>
                </div>
            </div>

            <!-- Feature 2: Real-Time Analytics -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h3>Real-Time Analytics</h3>
                    <p>
                        Visualize attendance trends with instant reports for students and classes. 
                        Export data to Excel with comprehensive insights.
                    </p>
                </div>
            </div>

            <!-- Feature 3: Multi-Tenant Architecture -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-buildings"></i>
                    </div>
                    <h3>Multi-Tenant Architecture</h3>
                    <p>
                        Your institute, your data. Fully isolated environments for total privacy. 
                        Each institute operates independently with secure access control.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
