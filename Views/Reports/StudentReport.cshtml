@model AttendenceManagementSystem.ViewModels.StudentDetailReportViewModel

@{
    ViewData["Title"] = "Student Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-person-badge"></i> Individual Student Report
            </h2>
            <p class="text-muted mb-0">
                <strong>@Model.StudentName</strong> (@Model.RollNumber) | 
                @Model.SubjectCode - @Model.SubjectName
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ExportStudentReport" asp-route-id="@Model.EnrollmentId" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Export History
            </a>
            <a asp-action="CourseReport" asp-route-id="@Model.CourseOfferingId" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Course
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="bi bi-check-circle"></i> Present
                    </h5>
                    <h2 class="mb-0">@Model.PresentCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="bi bi-x-circle"></i> Absent
                    </h5>
                    <h2 class="mb-0">@Model.AbsentCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="bi bi-calendar-x"></i> Leave
                    </h5>
                    <h2 class="mb-0">@Model.LeaveCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="bi bi-percent"></i> Percentage
                    </h5>
                    <h2 class="mb-0">@Model.AttendancePercentage%</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Chart -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">
                <i class="bi bi-pie-chart-fill"></i> Attendance Status Distribution
            </h5>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
            <div class="alert alert-info mt-3 text-center">
                <strong>Total Classes:</strong> @Model.TotalClasses | 
                <strong>Attendance Rate:</strong> 
                @if (Model.AttendancePercentage >= 85)
                {
                    <span class="badge bg-success" style="font-size: 1.1rem;">Excellent (@Model.AttendancePercentage%)</span>
                }
                else if (Model.AttendancePercentage >= 70)
                {
                    <span class="badge bg-warning text-dark" style="font-size: 1.1rem;">Good (@Model.AttendancePercentage%)</span>
                }
                else
                {
                    <span class="badge bg-danger" style="font-size: 1.1rem;">Poor (@Model.AttendancePercentage%)</span>
                }
            </div>
        </div>
    </div>

    <!-- Detailed History Table -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <i class="bi bi-calendar-range"></i> Date-wise Attendance History
            </h5>
            
            @if (Model.AttendanceHistory.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Day</th>
                                <th>Time Slot</th>
                                <th class="text-center">Status</th>
                                <th>Marked At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.AttendanceHistory)
                            {
                                <tr>
                                    <td>
                                        <strong>@record.Date.ToString("MMM dd, yyyy")</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@record.DayOfWeek</span>
                                    </td>
                                    <td>
                                        <i class="bi bi-clock"></i> @record.TimeSlot
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-@record.StatusBadge" style="font-size: 0.95rem;">
                                            @record.Status
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@record.MarkedAt.ToString("hh:mm tt")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No attendance records found yet.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        // Serialize ViewModel data to JavaScript
        var chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartData));

        // Create Pie Chart
        var ctx = document.getElementById('statusChart').getContext('2d');
        var statusChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: chartData.labels,
                datasets: [{
                    data: chartData.data,
                    backgroundColor: chartData.backgroundColors,
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Attendance Status Breakdown',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                let value = context.parsed || 0;
                                let total = context.dataset.data.reduce((a, b) => a + b, 0);
                                let percentage = ((value / total) * 100).toFixed(1);
                                return label + ': ' + value + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });
    </script>
}
