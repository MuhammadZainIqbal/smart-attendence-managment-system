@model AttendenceManagementSystem.ViewModels.ReportsIndexViewModel

@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <div class="mb-4">
        <h2><i class="bi bi-bar-chart-fill"></i> Reports & Analytics</h2>
        <p class="text-muted">Select a course to view detailed attendance reports and analytics.</p>
    </div>

    @if (Model.Courses.Any())
    {
        <div class="row">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <span class="badge bg-primary">@course.SubjectCode</span>
                            </h5>
                            <h6 class="card-subtitle mb-3 text-muted">@course.SubjectName</h6>
                            
                            <div class="mb-3">
                                <p class="mb-1">
                                    <i class="bi bi-mortarboard"></i> 
                                    <strong>Batch:</strong> <span class="badge bg-info text-dark">@course.BatchName</span>
                                </p>
                                <p class="mb-1">
                                    <i class="bi bi-people"></i> 
                                    <strong>Section:</strong> <span class="badge bg-secondary">@course.SectionName</span>
                                </p>
                                <p class="mb-0">
                                    <i class="bi bi-person-fill"></i> 
                                    <strong>Students:</strong> @course.TotalStudents
                                </p>
                            </div>

                            <a asp-action="CourseReport" asp-route-id="@course.CourseOfferingId" 
                               class="btn btn-primary w-100">
                                <i class="bi bi-bar-chart-line"></i> View Report
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            No courses assigned yet. You'll see reports here once you have course assignments.
        </div>
    }
</div>
