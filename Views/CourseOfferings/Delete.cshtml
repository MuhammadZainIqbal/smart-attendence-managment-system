@model AttendenceManagementSystem.Models.CourseOffering

@{
    ViewData["Title"] = "Delete Course Offering";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <h2 class="text-danger mb-4">
        <i class="bi bi-exclamation-triangle"></i> Delete Course Offering
    </h2>

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this course offering?</h5>
        <p class="mb-0">This action will also remove all student enrollments for this course.</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Batch:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@Model.Batch.Name</span>
                </dd>

                <dt class="col-sm-3">Section:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.Section.Name</span>
                </dd>

                <dt class="col-sm-3">Subject:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Subject.Code</strong> - @Model.Subject.Name
                </dd>

                <dt class="col-sm-3">Teacher:</dt>
                <dd class="col-sm-9">
                    <i class="bi bi-person-badge"></i> @Model.Teacher.FullName
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
