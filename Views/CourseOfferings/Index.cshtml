@model IEnumerable<AttendenceManagementSystem.Models.CourseOffering>

@{
    ViewData["Title"] = "Course Offerings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Course Offerings</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Course Offering
        </a>
    </div>

    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> 
        <strong>Course Offerings</strong> link Teachers to Subjects for specific Batches and Sections. 
        When you create a course offering, all existing students in that Batch+Section are automatically enrolled.
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Batch</th>
                        <th>Section</th>
                        <th>Subject</th>
                        <th>Teacher</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@item.Batch.Name</span>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">@item.Section.Name</span>
                            </td>
                            <td>
                                <strong>@item.Subject.Code</strong> - @item.Subject.Name
                            </td>
                            <td>
                                <i class="bi bi-person-badge"></i> @item.Teacher.FullName
                            </td>
                            <td class="text-end">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No course offerings found. Create your first course offering to assign teachers to classes.
        </div>
    }
</div>
