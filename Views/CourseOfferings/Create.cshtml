@{
    ViewData["Title"] = "Create Course Offering";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-card">
    <h2 class="mb-4">Create Course Offering</h2>

    <div class="alert alert-warning mb-4">
        <i class="bi bi-exclamation-triangle"></i> 
        <strong>Auto-Enrollment:</strong> When you create this course offering, all existing students 
        in the selected Batch and Section will be automatically enrolled in this course.
    </div>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="batchId" class="form-label">Batch</label>
                <select id="batchId" name="batchId" class="form-select" asp-items="ViewBag.Batches" required>
                    <option value="">-- Select Batch --</option>
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label for="sectionId" class="form-label">Section</label>
                <select id="sectionId" name="sectionId" class="form-select" asp-items="ViewBag.Sections" required>
                    <option value="">-- Select Section --</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="subjectId" class="form-label">Subject</label>
                <select id="subjectId" name="subjectId" class="form-select" asp-items="ViewBag.Subjects" required>
                    <option value="">-- Select Subject --</option>
                </select>
                <small class="form-text text-muted">The course/subject being taught</small>
            </div>

            <div class="col-md-6 mb-3">
                <label for="teacherId" class="form-label">Teacher</label>
                <select id="teacherId" name="teacherId" class="form-select" asp-items="ViewBag.Teachers" required>
                    <option value="">-- Select Teacher --</option>
                </select>
                <small class="form-text text-muted">The instructor for this course</small>
            </div>
        </div>

        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            <strong>Duplicate Prevention:</strong> You cannot create the same course offering twice 
            (same Batch, Section, Subject, and Teacher combination).
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create Course Offering
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
